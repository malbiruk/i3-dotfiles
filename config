##############################
# W I N D O W  C O N T R O L #
##############################

# modificator
set $mod Mod4

# i3-input
bindsym $mod+i exec i3-input

# floating modifier
floating_modifier $mod

# kill focused window
bindsym $mod+q kill

# change focus
bindsym $mod+j focus left
bindsym $mod+k focus down
bindsym $mod+l focus up
bindsym $mod+semicolon focus right

# alternatively, you can use the cursor keys:
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window
bindsym $mod+Shift+j move left
bindsym $mod+Shift+k move down
bindsym $mod+Shift+l move up
bindsym $mod+Shift+semicolon move right

# alternatively, you can use the cursor keys:
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# split in horizontal orientation
bindsym $mod+h split h

# split in vertical orientation
bindsym $mod+v split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# toggle sticky for floating
bindsym $mod+shift+s sticky toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# focus the parent container
bindsym $mod+a focus parent

# make marks
bindsym $mod+Shift+F1 mark --add --toggle 1
bindsym $mod+Shift+F2 mark --add --toggle 2
bindsym $mod+Shift+F3 mark --add --toggle 3
bindsym $mod+Shift+F4 mark --add --toggle 4
bindsym $mod+Shift+F5 mark --add --toggle 5
bindsym $mod+Shift+F6 mark --add --toggle 6
bindsym $mod+Shift+F7 mark --add --toggle 7
bindsym $mod+Shift+F8 mark --add --toggle 8
bindsym $mod+Shift+F9 mark --add --toggle 9
bindsym $mod+Shift+F10 mark --add --toggle 10
bindsym $mod+Shift+F11 mark --add --toggle 11
bindsym $mod+Shift+F12 mark --add --toggle 12

# switch to marks
bindsym $mod+F1 [con_mark="1"] focus
bindsym $mod+F2 [con_mark="2"] focus
bindsym $mod+F3 [con_mark="3"] focus
bindsym $mod+F4 [con_mark="4"] focus
bindsym $mod+F5 [con_mark="5"] focus
bindsym $mod+F6 [con_mark="6"] focus
bindsym $mod+F7 [con_mark="7"] focus
bindsym $mod+F8 [con_mark="8"] focus
bindsym $mod+F9 [con_mark="9"] focus
bindsym $mod+F10 [con_mark="10"] focus
bindsym $mod+F11 [con_mark="11"] focus
bindsym $mod+F12 [con_mark="12"] focus

# worspace names
set $1 1: www
set $2 2: mes
set $3 3: term
set $4 4: txt
set $5 5: pdf
set $6 6: off
set $7 7: mus
set $8 8: vid
set $9 9: etc
set $10 10: float

# switch to workspace
bindsym $mod+1 workspace $1
bindsym $mod+2 workspace $2
bindsym $mod+3 workspace $3
bindsym $mod+4 workspace $4
bindsym $mod+5 workspace $5
bindsym $mod+6 workspace $6
bindsym $mod+7 workspace $7
bindsym $mod+8 workspace $8
bindsym $mod+9 workspace $9
bindsym $mod+0 workspace $10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace $1
bindsym $mod+Shift+2 move container to workspace $2
bindsym $mod+Shift+3 move container to workspace $3
bindsym $mod+Shift+4 move container to workspace $4
bindsym $mod+Shift+5 move container to workspace $5
bindsym $mod+Shift+6 move container to workspace $6
bindsym $mod+Shift+7 move container to workspace $7
bindsym $mod+Shift+8 move container to workspace $8
bindsym $mod+Shift+9 move container to workspace $9
bindsym $mod+Shift+0 move container to workspace $10

#move focused container to workspace and switch to that workspace
bindsym $mod+Control+1 move container to workspace $1; workspace $1
bindsym $mod+Control+2 move container to workspace $2; workspace $2
bindsym $mod+Control+3 move container to workspace $3; workspace $3
bindsym $mod+Control+4 move container to workspace $4; workspace $4
bindsym $mod+Control+5 move container to workspace $5; workspace $5
bindsym $mod+Control+6 move container to workspace $6; workspace $6
bindsym $mod+Control+7 move container to workspace $7; workspace $7
bindsym $mod+Control+8 move container to workspace $8; workspace $8
bindsym $mod+Control+9 move container to workspace $9; workspace $9
bindsym $mod+Control+0 move container to workspace $10; workspace $10

# move focused workspace between monitors
bindsym $mod+Ctrl+greater move workspace to output right
bindsym $mod+Ctrl+less move workspace to output left

# window rules
# assign [class="Google-chrome"] $1
assign [class="Telegram"] $2
assign [class="Slack"] $2
assign [class="Atom"] $4
assign [class="Evince"] $5
assign [class="Zathura"] $5
for_window [class="libreoffice"] move to workspace $6
for_window [class="Spotify"] move to workspace $7
assign [class="REAPER"] $7
assign [class="vlc"] $8
assign [class="Gimp"] $9

# floating rules
for_window [window_role="pop-up"] floating enable
for_window [window_role="bubble"] floating enable 
for_window [window_role="task_dialog"] floating enable
for_window [window_role="Preferences"] floating enable
for_window [window_type="dialog"] floating enable 
for_window [window_type="menu"] floating enable
for_window [window_role="Organizer"] floating enable
for_window [window_role="About"] floating enable
for_window [window_role="toolbox"] floating enable
for_window [window_role="page-info"] floating enable	
for_window [window_role="webconsole"] floating enable
for_window [workspace="10: float"] floating enable

# exec_always --no-startup-id python3 /home/klim/.config/i3/float_ws.py

# default workspace
exec --no-startup-id i3-msg 'workspace $1'

# move workspace to output left/right
bindsym $mod+control+Left move workspace to output left
bindsym $mod+control+Right move workspace to output right

# reload the configuration file
bindsym $mod+Shift+c reload

# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart

# resize window (you can also use the mouse for that)
mode "resize" {
        bindsym j resize shrink width 10 px or 10 ppt
        bindsym k resize grow height 10 px or 10 ppt
        bindsym l resize shrink height 10 px or 10 ppt
        bindsym semicolon resize grow width 10 px or 10 ppt

        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"


###############
# L A U N C H #
###############

# terminal
bindsym $mod+Return exec urxvt
bindsym $mod+Shift+Return exec python3 /home/klim/.config/i3/urxvt_float.py 

# applications
bindsym $mod+d exec /home/klim/.config/i3/rofi.sh

# locker
bindsym --release $mod+z exec slock

# log out menu
bindsym $mod+Shift+q exec /home/klim/.config/i3/logout_menu.sh

# monitors control
bindsym $mod+p exec lxrandr

# screenshoter
bindsym Print exec scrot -e 'mv $f Pictures/Screenshots/'
bindsym --release Shift+Print exec scrot -s '/tmp/%F_%T_$wx$h.png' -e 'xclip -selection clipboard -target image/png -i $f'

# touchpad config
exec --no-startup-id synclient VertScrollDelta=20 HorizScrollDelta=40 HorizTwoFingerScroll=1 VertEdgeScroll=0 AccelFactor=0.089 VertScrollDelta=-113 TapButton1=1 TapButton2=3 NaturalScrolling=1
exec --no-startup-id syndaemon -i 0.5 -t -K -R #disable touchpad while typing

# right capslock as escape key
exec_always "sleep 0.1 && setxkbmap -option caps:swapescape"

# change layout
# exec_always --no-startup-id setxkbmap -layout "us,ru" 
# exec_always --no-startup-id setxkbmap -option "grp:shifts_toggle"
exec_always "setxkbmap -model pc105 -layout us,ru -option grp:shifts_toggle"

# settings
# touchpad config
exec --no-startup-id synclient VertScrollDelta=20 HorizScrollDelta=40 HorizTwoFingerScroll=1 VertEdgeScroll=0 AccelFactor=0.089 VertScrollDelta=-113 TapButton1=1 TapButton2=3
exec --no-startup-id syndaemon -i 0.5 -t -K -R #disable touchpad while typing

# Pulse Audio controls
bindsym XF86AudioRaiseVolume exec "amixer -D pulse sset Master 5%+ unmute"
bindsym XF86AudioLowerVolume exec "amixer -D pulse sset Master 5%- unmute"
bindsym XF86AudioMute exec "amixer -D pulse sset Master toggle"

# Sreen brightness controls
bindsym XF86MonBrightnessDown exec light -U 10
bindsym XF86MonBrightnessUp exec light -A 10

# tray
exec_always --no-startup-id nm-applet
exec --no-startup-id volumeicon
exec --no-startup-id xfce4-power-manager

###############
# R I C I N G #
###############

# source Xresources
exec_always xrdb -merge ~/.Xresources

# font
font pango:Hack 6

# thin borders
new_window pixel 2
new_float pixel 2

# hide edge borders
hide_edge_borders smart

# colors
set $trans  #00000000
set $black  #2d2d2d
set $grey   #666666
set $white  #cccccc
set $red    #f2777a
set $blue   #6699cc
set $cyan   #66cccc
set $yellow #ffcc66
set $green  #99cc99
set $magenta #cc99cc

# window colors
#                       border              background         text             indicator
client.focused          $yellow             $yellow              $black              $green
client.unfocused        $black              $black             $white            $green
client.focused_inactive $black              $black             $white            $green
client.urgent           $cyan               $cyan               $black           $green

# i3bar configuration
bar {
        mode invisible
        i3bar_command i3bar -t
        status_command i3blocks -c /home/klim/.config/i3/i3blocks.conf
        separator_symbol "|"
        font pango: Hack 9
        position top
        colors {
                background $trans
                separator  $trans
        #                          border             background         text
                focused_workspace  $trans             $trans             #ffffff
                inactive_workspace $trans             $trans             $black
                urgent_workspace   $cyan              $cyan              $black
        }
}

bindsym $mod+b exec --no-startup-id i3-msg bar mode dock
bindsym $mod+shift+b exec --no-startup-id i3-msg bar mode invisible

# gaps
gaps inner 18
gaps outer 18
# smart_gaps on

bindsym $mod+g gaps inner current plus 6
bindsym $mod+shift+g gaps inner current minus 6
bindsym $mod+x gaps outer current plus 6
bindsym $mod+shift+x gaps outer current minus 6
bindsym $mod+control+g exec --no-startup-id exec /home/klim/.config/i3/toggle_gaps.sh toggle 
# i3-msg gaps inner current set 0 && i3-msg gaps outer current set 0

# wallpaper
exec_always --no-startup-id feh --bg-scale /home/klim/Pictures/wallpaper.jpg

# compositor
exec_always --no-startup-id picom --experimental-backends --config /home/klim/.config/picom.conf

# hide mouse pointer
exec --no-startup-id xbanish

# notifications
bindsym $mod+n exec dunstctl history-pop

# autostart
exec sleep 0.1 && /home/klim/.config/i3/rofi.sh
exec --no-startup-id gnome-keyring-daemon -d
